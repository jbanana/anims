#!/bin/bash
function printToBuffers () {
  case $(( ( $1 + 50 ) % 18 )) in
    13|12)
      buf[0]='             |   _'
      buf[1]='             |\\ ( )'
      buf[2]='             | \\ ||'
      buf[3]='             |__/  \\'
      buf[4]='  __________/|\\ |  |  ________'
      buf[5]='  \\         \\_/_|__|_/       /'
      buf[6]='~~~`~~~~~~~~~~~~~~~~~~~~~~~~'\''~~~\e[B'
      buf[7]='\e[A                     '
      ;;
    11|10)
      buf[0]='                 _'
      buf[1]='                ( )'
      buf[2]='             /\\  ||'
      buf[3]='            /  \\/  \\'
      buf[4]='  _________/   /|  |  ________'
      buf[5]='  \\       /_\\_/_|__|_/       /'
      buf[6]='~~~`~~~~~/~~~~~~~~~~~~~~~~~~'\''~~~\e[B'
      buf[7]='\e[A        /            '
      ;;
    9|8)
      buf[0]='                 _'
      buf[1]='                ( )'
      buf[2]='             |\\  ||'
      buf[3]='             | \\/ |\\'
      buf[4]='  __________ |__|_||  ________'
      buf[5]='  \\         \\|__|__|_/       /'
      buf[6]='~~~`~~~~~~~~~|~~~~~~~~~~~~~~'\''~~~\e[B'
      buf[7]='\e[A             |        '
      ;;
    *)
      buf[0]='                    _'
      buf[1]='                   ( )'
      buf[2]='             \\____ //'
      buf[3]='              \\  / ||'
      buf[4]='  __________   \\/  |/ ________'
      buf[5]='  \\         \\__/\\__|_/       /'
      buf[6]='~~~`~~~~~~~~~~~~~\\~|~~~~~~~~'\''~~~\e[B'
      buf[7]='\e[A                  \\/ '
      ;;
  esac
}

. anim

function preAnim () {
  echo -e "\e[u\e[6B\c"
  for x in $(seq 0 ${animW})
  do
    echo -e "~\c"
  done
}

